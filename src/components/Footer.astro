---
import Medias from "./Medias.astro";
---

<footer class="footer shadow">
    <div class="footerCol">
        <ul>
            <li><a href="/contact"> Nous contacter</a></li>
            <li>
                <a
                    href="https://github.com/Plumtree3D/trenteneufdegres/tree/main/doc/presskit"
                >
                    Kit de presse</a
                >
            </li>
            <li><a href="/charte"> Charte éditoriale</a></li>
            <li><a href="/legales"> Mentions Légales</a></li>
        </ul>
    </div>
    <img src="https://trenteneufdeg.goatcounter.com/count?p=/compte-total" />

    <div class="footerCol">
        <Medias />
        <span>Trente Neuf Degrés © 2023</span>
    </div>
</footer>

<style>
    .footer {
        width: 100%;
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        background-color: var(--color-white);
        min-height: var(--header-height);
        margin-top: var(--margin);
        padding: 1rem;
    }

    .footerCol {
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
        align-items: flex-end;
    }

    .logo {
        max-height: 64px;
        opacity: 0.6;
    }

    ul {
        list-style: none;
        padding: 0;
        margin: 0;
        font-family: var(--quote-font);
    }

    a {
        text-decoration: none;
        opacity: 0.7;
        color: var(--color-black);
    }

    a:hover,
    a:focus {
        opacity: 1;
    }

    @media only screen and (min-width: 768px) {
        .footer {
            width: calc(100% - 244px);
        }
        ul {
            column-count: 2;
        }
    }
</style>
